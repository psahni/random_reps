<h1>Listing pools</h1>

<table>
  <thead>
    <tr>
      <th>Pool type</th>
      <th>Hostname</th>
      <th>Port</th>
      <th>Username</th>
      <th>Password</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pools.each do |pool| %>
      <tr>
        <td><%= pool.pool_type_id %></td>
        <td><%= pool.hostname %></td>
        <td><%= pool.port %></td>
        <td><%= pool.username %></td>
        <td><%= pool.password %></td>
        <td><%= link_to 'Show', pool %></td>
        <td><%= link_to 'Edit', edit_pool_path(pool) %></td>
        <td><%= link_to 'Destroy', pool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

